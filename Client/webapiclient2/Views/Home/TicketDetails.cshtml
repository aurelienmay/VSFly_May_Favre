@model webapiclient2.Models.TicketDetails

@{
    ViewData["Title"] = "TicketDetails";
}

<h1>Thanks for your order !</h1>

<div>
    <hr />
    <h4>Tiket details</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Username
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.username)
        </dd>
        <dt class="col-sm-2">
            Extras choosen
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Flight price
        </dt>
        <dd class="col-sm-10">
            CHF @Html.DisplayFor(model => model.price).-
        </dd>
        <dt class="col-sm-2">
            Extas price
        </dt>
        <dd class="col-sm-10">
            CHF @Html.DisplayFor(model => model.extraPrice).-
        </dd>
        <dt class="col-sm-2">
            Total price
        </dt>
        <dd class="col-sm-10">
            <b>
                CHF @Html.DisplayFor(model => model.totalPrice).-
            </b>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
