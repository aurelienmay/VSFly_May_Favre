@model webapiclient2.Models.FlightBooking

@{
    ViewData["Title"] = "FlightDetails";
}

<h1>FlightDetails</h1>

<div>
    <h4>FlightBooking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departure)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departure)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableSeats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvailableSeats)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seats)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BasePrice)
        </dt>
        <dd class="col-sm-10">
            <b>@Html.DisplayFor(model => model.BasePrice).- CHF</b>
        </dd>
    </dl>
</div>
<div>
    <div>
        @using (Html.BeginForm("BookThisFlight", "Home", new { flightNo = Model.FlightNo }, FormMethod.Post))
        {
            <b>@Html.Label("Enter your username")</b>
            <br />
            @*<b>@ViewBag.ErrorMessage</b>*@
            @Html.TextBox("txtName")
            <p></p>
            <input type="button" class="btn btn-info btn-sm active" value="CANCEL" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
            <input type="submit" class="btn btn-info btn-sm active" value="BOOK" id="btnSubmit" name="Submit" />
        }
    </div>
</div>
